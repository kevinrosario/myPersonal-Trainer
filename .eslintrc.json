{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "no-param-reassign": 0,
      "no-console":0,
      "comma-dangle":0,
      "prefer-const": "error",
      "no-var": "error",
      "quotes": [
        "error",
        "single"
      ],
      "indent": ["error", 2],
      "react/prop-types": [0]
    },
    "extends": "airbnb"
}
